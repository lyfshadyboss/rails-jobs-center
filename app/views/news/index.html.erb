<div class="panel panel-info admin-panel-info">
  <div class="panel-heading">新闻列表</div>

  <div class="panel-body">
    <%= link_to "发布新闻", new_admin_news_path %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>编号</th>
        <th>标题</th>
        <th>创建时间</th>
        <th>修改时间</th>
        <th>操作</th>
      </tr>
      </thead>

      <tbody>

      <% index = 0 %>
      <% @news.each do |news| %>
          <tr>
            <td><%= index += 1 %></td>
            <td>
              <%= link_to news.title, admin_news_path(news) %>
            </td>
            <td><%= news.created_at %></td>
            <td><%= news.updated_at %></td>
            <td>
              <%= link_to "编辑", edit_admin_news_path(news) %>
              <%= link_to "删除", admin_news_path(news),
                          method: :delete, data: {confirm: '确定删除吗？'} %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="container">
    <%= will_paginate @news %>
  </div>

</div>
