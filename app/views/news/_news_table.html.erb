<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>编号</th>
      <th>标题</th>
      <th>日期</th>
    </tr>
    </thead>

    <tbody>

    <% index = 0 %>
    <% @news.each do |news| %>
        <tr>
          <td><%= index += 1 %></td>
          <td>
            <%= link_to news.title, "" %>
          </td>
          <td><%= news.updated_at %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>