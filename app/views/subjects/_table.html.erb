<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>编号</th>
      <th>学院名称</th>
      <th>操作</th>
    </tr>
    </thead>

    <tbody>

    <% index = 0 %>
    <% @subjects.each do |subject| %>
        <tr>
          <td><%= index += 1 %></td>
          <td><%= subject.name %></td>
          <td>
            <%= link_to "编辑", edit_admin_subject_path(subject) %>
            <%= link_to "删除", admin_subject_path(subject),
                        method: :delete, data: {confirm: '确定删除吗？'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>