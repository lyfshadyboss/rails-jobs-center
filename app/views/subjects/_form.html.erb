<div class="form-group">
  <%= label_tag :subject_name, "学院名称：", class: "col-sm-1 control-label" %>
  <div class="col-sm-2">
    <%= form.text_field :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :subject_content, "介绍：", class: "col-sm-1 control-label" %>
  <div class="col-sm-8">
    <%= form.text_area :introduce, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-10">
    <button type="submit" class="btn btn-default">提交</button>
  </div>
</div>