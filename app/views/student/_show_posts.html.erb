<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>编号</th>
      <th>公司</th>
      <th>标题</th>
      <th>日期</th>
    </tr>
    </thead>

    <tbody>

    <% index = 0 %>
    <% @posts.each do |post| %>
        <tr>
          <td><%= index += 1 %></td>
          <td><%= post.company.name %></td>
          <td>
            <%= link_to post.title, student_browse_post_path(post) %>
          </td>
          <td><%= post.updated_at %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>