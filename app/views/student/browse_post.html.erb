<div class="panel panel-info student-panel-info">
  <%= render 'posts/post' %>

  <div id="deliver-to-post">
    <%= form_for current_student, url: '/student/deliver', method: 'post',
                 html: {class: 'form-horizontal', role: 'form'} do |f| %>
        <%= hidden_field :post, :id, :value => @post.id %>

        <div class="form-group">
          <%= label_tag :selected_resume, "选择简历：", class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= select_tag "selected_resume",
                           options_from_collection_for_select(current_student.resumes, :id, :title),
                           {class: "form-control", include_blank: true}
            %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <button type="submit" class="btn btn-default">投递</button>
          </div>
        </div>
    <% end %>
  </div>
</div>