<div class="form-group">
  <div class="col-sm-1 control-label"></div>
  <div class="col-sm-8 resume-group">
    <div class="col-sm-2">
      <%= f.text_field :start_date, class: "form-control datepicker",
                       :placeholder => "起始日期" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :end_date, class: "form-control datepicker",
                       :placeholder => "结束日期" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :school_name, class: "form-control",
                       :placeholder => "学校名称" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :major, class: "form-control",
                       :placeholder => "专业" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :degree, class: "form-control",
                       :placeholder => "学位" %>
    </div>
  </div>

  <div class="col-sm-1">
    <% if f.object.new_record? %>
        <%= link_to '删除', '', :remote => false, class: 'destroy-nested-form btn-danger form-control' %>
    <% else %>
        <%= link_to '删除', '', :remote => true, :method => :delete, class: 'destroy-nested-form btn-danger form-control' %>
    <% end %>
  </div>
</div>