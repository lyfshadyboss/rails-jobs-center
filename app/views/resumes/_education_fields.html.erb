<div class="form-group nested-education-field">
  <div class="col-sm-1 control-label"></div>
  <div class="col-sm-8 resume-group">
    <div class="col-sm-2">
      <%= f.text_field :start_date, class: "form-control datepicker",
                       :placeholder => "起始日期" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :end_date, class: "form-control datepicker",
                       :placeholder => "结束日期" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :school_name, class: "form-control",
                       :placeholder => "学校名称" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :major, class: "form-control",
                       :placeholder => "专业" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :degree, class: "form-control",
                       :placeholder => "学位" %>
    </div>
  </div>

  <div class="col-sm-1">
    <% if f.object.new_record? %>
        <button type="button" class='destroy-nested-form btn-danger form-control destroy-nested-education-field'>删除</button>
    <% else %>
        <%= link_to '删除', student_resume_education_path(@resume, f.object), :remote => true, :method => :delete,
                    class: 'destroy-nested-form btn-danger form-control destroy-nested-education-field' %>
    <% end %>
  </div>
</div>