<div class="form-group">
  <%= label_tag :educations, "教育经历：", class: "col-sm-1 control-label" %>
  <div class="col-sm-8 resume-group">
    <div class="col-sm-2">
      <%= f.text_field :start_date, class: "form-control datepicker",
                       :placeholder => "起始日期" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :end_date, class: "form-control datepicker",
                       :placeholder => "结束日期" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :school_name, class: "form-control",
                       :placeholder => "学校名称" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :major, class: "form-control",
                       :placeholder => "专业" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :degree, class: "form-control",
                       :placeholder => "学位" %>
    </div>

    <button type="button" id="resume-add-button" class="btn btn-primary glyphicon glyphicon-plus"> 添加教育经历</button>
  </div>
</div>