<div class="form-group">
  <%= label_tag :resume_title, "简历名称：", class: "col-sm-1 control-label" %>
  <div class="col-sm-2">
    <%= form.text_field :title, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :resume_introduce, "介绍：", class: "col-sm-1 control-label" %>
  <div class="col-sm-8">
    <%= form.text_area :introduce, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :educations, "教育经历：", class: "col-sm-1 control-label" %>

  <div class="col-sm-2">
    <button type="button" id="resume-add-button" class="btn btn-primary glyphicon glyphicon-plus add-nested-education-field">
      添加教育经历
    </button>
  </div>
</div>

<%= form.fields_for :educations do |builder| %>
    <%= render "resumes/education_fields", :f => builder %>
<% end %>


