<div class="form-group">
  <%= label_tag :resume_title, "简历名称：", class: "col-sm-1 control-label" %>
  <div class="col-sm-2">
    <%= form.text_field :title, class: "form-control" %>
  </div>
</div>

<%= form.fields_for :educations do |builder| %>
    <%= render "resumes/education_fields", :f => builder %>
<% end %>

<%= form.fields_for :glories do |builder| %>
    <%= render "resumes/glory_fields", :f => builder %>
<% end %>

<%= form.fields_for :work_experiences do |builder| %>
    <%= render "resumes/work_experience_fields", :f => builder %>
<% end %>

<%= form.fields_for :skills do |builder| %>
    <%= render "resumes/skill_fields", :f => builder %>
<% end %>

<%= form.fields_for :sample_works do |builder| %>
    <%= render "resumes/sample_work_fields", :f => builder %>
<% end %>

<%= form.fields_for :interests do |builder| %>
    <%= render "resumes/interest_fields", :f => builder %>
<% end %>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-10">
    <button type="submit" class="btn btn-default">创建</button>
  </div>
</div>