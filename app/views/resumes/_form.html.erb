<div class="form-group">
  <%= label_tag :resume_title, "简历名称：", class: "col-sm-1 control-label" %>
  <div class="col-sm-2">
    <%= form.text_field :title, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :educations, "教育经历：", class: "col-sm-1 control-label" %>
  <div class="col-sm-8 resume_education_group">
    <div class="col-sm-2">
      <%= form.text_field :title, class: "form-control",
                          :placeholder => "起始日期" %>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :title, class: "form-control",
                          :placeholder => "结束日期" %>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :title, class: "form-control",
                          :placeholder => "学校名称" %>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :title, class: "form-control",
                          :placeholder => "专业" %>
    </div>
    <div class="col-sm-2">
      <%= form.text_field :title, class: "form-control",
                          :placeholder => "学位" %>
    </div>

    <button type="button" id="resume_add_button" class="btn btn-primary glyphicon glyphicon-plus"> 添加教育经历</button>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 col-sm-10">
    <button type="submit" class="btn btn-default">创建</button>
  </div>
</div>