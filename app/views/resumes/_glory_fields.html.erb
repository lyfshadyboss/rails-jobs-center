<div class="form-group">
  <%= label_tag :glories, "获奖情况：", class: "col-sm-1 control-label" %>

  <div class="col-sm-8 resume_group">
    <div class="col-sm-2">
      <%= f.text_field :date, class: "form-control",
                       :placeholder => "获奖日期" %>
    </div>

    <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control",
                       :placeholder => "奖项名称" %>
    </div>

    <div class="col-sm-4">
      <%= f.text_field :description, class: "form-control",
                       :placeholder => "描述" %>
    </div>

  </div>

</div>