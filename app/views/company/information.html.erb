<div class="panel panel-info company-panel-info">
  <div class="panel-heading">公司信息</div>
  <div class="panel-body">
    请完善公司信息！
  </div>

  <%= form_for current_company,
               url: {action: 'commit_for_update'},
               html: {class: 'form-horizontal', role: 'form'} do |f| %>
      <div class="form-group">
        <%= label_tag :company_name, "公司名称：", class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :company_introduce, "公司介绍：", class: "col-sm-1 control-label" %>
        <div class="col-sm-6">
          <%= f.text_area :introduce, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :company_type, "公司类型：", class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.collection_select :company_type, CompanyType.all, :id, :name,
                                  {}, {class: 'form-control'} %>
        </div>
      </div>


      <div class="form-group">
        <%= label_tag :company_scale, "公司规模：", class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.collection_select :company_scale, CompanyScale.all, :id, :name,
                                  {}, {class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :company_site, "公司网址：", class: "col-sm-1 control-label" %>
        <div class="col-sm-3">
          <%= f.text_field :site, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :company_address, "地址：", class: "col-sm-1 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :address, {class: "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :company_telephone, "联系方式：", class: "col-sm-1 control-label" %>
        <div class="col-sm-3">
          <%= f.text_field :telephone, {class: "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <button type="submit" class="btn btn-default">提交</button>
          <button type="reset" class="btn btn-default">取消</button>
        </div>
      </div>
  <% end %>
</div>

