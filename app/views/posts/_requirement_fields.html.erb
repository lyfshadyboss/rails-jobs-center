<div class="form-group nested-requirement-field">
  <div class="col-sm-1 control-label"></div>
  <div class="col-sm-8 post-group">
    <div class="col-sm-2">
      <%= f.text_field :title, class: "form-control",
                       :placeholder => "概述" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :detail, class: "form-control",
                      :placeholder => "详细描述" %>
    </div>
  </div>

  <div class="col-sm-1">
    <% if f.object.new_record? %>
        <button type="button" class='destroy-nested-form btn-danger form-control destroy-nested-requirement-field'>删除</button>
    <% else %>
        <%= link_to '删除', company_post_requirement_path(@post, f.object), :remote => true, :method => :delete,
                    class: 'destroy-nested-form btn-danger form-control destroy-nested-requirement-field' %>
    <% end %>
  </div>
</div>