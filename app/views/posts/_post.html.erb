<!-- header wrap -->
<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <h2><%= @company.name %></h2>
        <h4><%= @post.title %> | 人数 <%= @post.amount %></h4>
        <br/>
        <h5><%= @post.updated_at %></h5>
      </div>
    </div>
  </div>
</div>

<!--  introduce section-->
<div id="intro">
  <div class="container">
    <div class="row">
      <div class="col-lg-2 col-lg-offset-1">
        <h5>公司介绍</h5>
      </div>

      <div class="col-lg-8"><%=simple_format(@company.introduce).html_safe %></div>
    </div>
  </div>
</div>

<!--  description section-->
<div class="container desc">
  <div class="row">
    <div class="col-lg-2 col-lg-offset-1">
      <h5>职位描述</h5>
    </div>

    <div class="col-lg-6"><%=simple_format(@post.description).html_safe %></div>
  </div>
</div>

<!--  requirement section-->
<div class="container desc">
  <%= render partial: 'posts/requirement', collection: @post.requirements %>
</div>

<div id="footwrap">
  <div class="container">
    <div class="row">
      <div class="col-lg-2 col-lg-offset-1"><h5>联系方式</h5></div>
      <div class="col-lg-6">
        <p>
          <t>邮箱</t>
          <br/>
          <%= @company.email %>
        </p>

        <p>
          <t>地址</t>
          <br/>
          <%= @company.address %>
        </p>

        <p>
          <t>电话</t>
          <br/>
          <%= @company.telephone %>
        </p>
      </div>
    </div>
  </div>
</div>